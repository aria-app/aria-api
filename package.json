{
  "name": "aria-api",
  "version": "1.0.0",
  "description": "Main API for Aria.",
  "main": "index.js",
  "scripts": {
    "build": "yarn clean && tsc",
    "ci": "yarn run lint && && yarn build && yarn test --coverage && npx codecov",
    "clean": "rimraf coverage dist",
    "dev": "ts-node-dev --transpile-only --no-notify src/index.ts",
    "lint": "eslint --cache --fix src/**/*.ts && prettier --write src/**/*.ts",
    "reset": "prisma migrate reset -f && prisma generate",
    "start": "ts-node --transpile-only src/index.ts",
    "test": "jest --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aria-app/aria-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aria-app/aria-api/issues"
  },
  "homepage": "https://github.com/aria-app/aria-api#readme",
  "dependencies": {
    "@prisma/client": "2.19.0",
    "apollo-server": "2.19.0",
    "bcrypt": "5.0.0",
    "cookie": "0.4.1",
    "date-fns": "2.16.1",
    "dotenv": "8.2.0",
    "graphql": "15.4.0",
    "isemail": "3.2.0",
    "jsonwebtoken": "8.5.1",
    "jwt-decode": "3.1.2",
    "lodash": "4.17.20",
    "ts-node": "9.1.1"
  },
  "devDependencies": {
    "@types/graphql": "14.5.0",
    "@types/node": "14.14.35",
    "@typescript-eslint/eslint-plugin": "4.18.0",
    "@typescript-eslint/parser": "4.18.0",
    "apollo-server-testing": "2.19.2",
    "eslint": "7.14.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": ">=4",
    "jest": "26.6.3",
    "lint-staged": ">=10",
    "nodemon": "2.0.6",
    "prettier": "2.2.0",
    "prisma": "2.19.0",
    "rimraf": "3.0.2",
    "ts-node-dev": "1.1.6",
    "typescript": "4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "jest": {
    "verbose": false
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix && prettier --write"
  }
}
